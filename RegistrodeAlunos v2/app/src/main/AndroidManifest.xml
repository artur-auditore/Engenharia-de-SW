<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.artur.registrodealunos">

    <application
            android:name=".dal.App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".ListaActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".FormularioAlunoActivity"
                android:parentActivityName=".ListaActivity"
                android:label="Novo Aluno">
        </activity>
        <activity android:name=".FormularioFaculdadeActivity"
                  android:parentActivityName=".ListaActivity"
        android:label="Nova Faculdade">
        </activity>
    </application>

</manifest>